<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ACalculator.ConverterPage.HeadingPage">
  <ContentView.Content>
        <StackLayout >
            <Frame  Style="{DynamicResource frame_style}">
                <!--nagłówek-->
                <Grid x:Name="headingGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Text="Powrót" Clicked="Button_Clicked" Style="{DynamicResource button_style}"
                            Padding="0" FontSize="15" Grid.Row="0" Grid.Column="0" HorizontalOptions="Start" />
                    <Label x:Name="labelHeadText"  Grid.Row="0" Grid.Column="1" FontSize="18"
                           VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                </Grid>
            </Frame>
        </StackLayout>
  </ContentView.Content>
</ContentView>